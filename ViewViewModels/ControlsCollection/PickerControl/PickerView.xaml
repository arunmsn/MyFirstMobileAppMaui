<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.ControlsCollection.PickerControl.PickerView"
             Title="{Binding Title}">

    <VerticalStackLayout>

        <ImageButton Grid.Row="0"
                     Grid.Column="0"
                     Source="Images/xaml.png"
                     Command="{Binding OnXAMLClicked}" />
        <ImageButton Grid.Row="1"
                     Grid.Column="0"
                     Source="Images/vm.png"
                     Command="{Binding OnVMClicked}" />
            
    </VerticalStackLayout>


</ContentPage>