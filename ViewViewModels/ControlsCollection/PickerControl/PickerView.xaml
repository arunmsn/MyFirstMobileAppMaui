<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.ControlsCollection.PickerControl.PickerView"
             Title="{Binding Title}">

    <VerticalStackLayout>


        <ImageButton Source="Images/xaml.png"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="Center"
                     Command="{Binding OnXAMLClicked}" />
                
        <BoxView MinimumWidthRequest="30"
                 BackgroundColor="Black"/>
            
        <ImageButton Source="Images/vm.png"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="Center"
                     Command="{Binding OnVMClicked}" />
    
    </VerticalStackLayout>


</ContentPage>